<section class="product-development">
    <h2>Product & Development</h2>
    
    <div class="product-grid">
        <div class="product-card">
            <h3>Product Status</h3>
            <div class="status-info">
                <div class="status-item">
                    <h4>Development Phase</h4>
                    <p>{{productInfo.developmentPhase}}</p>
                </div>
                <div class="status-item">
                    <h4>Lifecycle Phase</h4>
                    <p>{{productInfo.lifecyclePhase}}</p>
                </div>
                <div class="status-item">
                    <h4>Revenue Status</h4>
                    <p>{{#if productInfo.hasRevenue}}Generating Revenue{{else}}No Current Revenue{{/if}}</p>
                </div>
            </div>
        </div>

        <div class="product-card">
            <h3>Revenue & Monetization</h3>
            <div class="revenue-info">
                <h4>Current Revenue Streams</h4>
                <p>{{productInfo.revenueStreams}}</p>
                
                <h4>Path to Monetization</h4>
                <p>{{productInfo.monetizationPath}}</p>
            </div>
        </div>

        <div class="product-card">
            <h3>Development Status</h3>
            <div class="dev-info">
                <div class="dev-status">
                    <h4>Codebase Status</h4>
                    <p>{{#if developmentInfo.isOpenSource}}Open Source{{else}}Closed Source{{/if}}</p>
                </div>
                {{#if developmentInfo.repoLink}}
                <div class="dev-status">
                    <h4>Repository</h4>
                    <a href="{{developmentInfo.repoLink}}" target="_blank">View on GitHub</a>
                </div>
                {{/if}}
                <div class="dev-status">
                    <h4>Recent Activity</h4>
                    <p>{{developmentInfo.updateActivity}}</p>
                </div>
                <div class="dev-status">
                    <h4>Active Contributors</h4>
                    <p>{{developmentInfo.activeContributors}}</p>
                </div>
            </div>
        </div>

        {{#if developmentInfo.recentFeatures}}
        <div class="product-card">
            <h3>Recent Features</h3>
            <ul class="feature-list">
                {{#each developmentInfo.recentFeatures}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>
        {{/if}}

        {{#if developmentInfo.thirdPartyActivity}}
        <div class="product-card">
            <h3>Third-Party Integration</h3>
            <p>{{developmentInfo.thirdPartyActivity}}</p>
        </div>
        {{/if}}
    </div>
</section> 